<?xml version="1.0" encoding="ISO-8859-1"?>

<taglib xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd"
        version="2.1">

    <tlib-version>1.0</tlib-version>
    <short-name>followers</short-name>
    <uri>http://followers.com</uri>

    <tag>
        <name>list</name>
        <tag-class>tags.FollowersList</tag-class>
        <body-content>empty</body-content>
        <attribute>
            <name>followers</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>

    <function>
        <name>getFollowersList</name>
        <function-class>tags.FollowersList</function-class>
        <function-signature>java.lang.String getFollowers(java.util.Collection)</function-signature>
    </function>

</taglib>
